<Window x:Class="deAirport2.SeatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:deAirport2"
        mc:Ignorable="d"
        Title="SeatSelectionWindow" Height="450" Width="800">
     <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Выберите место в самолете" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="10" />

        <!-- Сетка с местами -->
         
        <UniformGrid Grid.Row="1" Rows="6" Columns="2" HorizontalAlignment="Center" Margin="10" x:Name="Seats">
            <ToggleButton Margin="2" Content="A1" Checked="Seat_Checked"  />
            <ToggleButton Margin="2" Content="A2" Checked="Seat_Checked"  />
            <ToggleButton Margin="2" Content="B1" Checked="Seat_Checked"  />
            <ToggleButton Margin="2" Content="B2" Checked="Seat_Checked"  />
            <ToggleButton Margin="2" Content="C1" Checked="Seat_Checked" />
            <ToggleButton Margin="2" Content="C2" Checked="Seat_Checked"  />
            <ToggleButton Margin="2" Content="D1" Checked="Seat_Checked"  />
            <ToggleButton Margin="2" Content="D2" Checked="Seat_Checked"  />
            <ToggleButton Margin="2" Content="E1" Checked="Seat_Checked"  />
            <ToggleButton Margin="2" Content="E2" Checked="Seat_Checked"  />
            <ToggleButton Margin="2" Content="F1" Checked="Seat_Checked"  />
            <ToggleButton Margin="2" Content="F2" Checked="Seat_Checked"  />
        </UniformGrid>

        <!-- Кнопка подтверждения -->
        <Button Content="Подтвердить выбор" Grid.Row="2" Width="200" Height="40"
                HorizontalAlignment="Center" Margin="10" Click="Confirm_Click" />
    </Grid>
</Window>
