<Window x:Class="deAirport2.FlightDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:deAirport2"
        mc:Ignorable="d"
        Title="FlightDetailsWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Детали рейса" FontWeight="Bold" FontSize="16" Margin="0,0,0,20" />

            <TextBlock Text="Номер рейса:" FontWeight="Bold" />
            <TextBlock Text="{Binding FlightNumber}" Margin="0,0,0,10" />

            <TextBlock Text="Пункт отправления:" FontWeight="Bold" />
            <TextBlock Text="{Binding Departure}" Margin="0,0,0,10" />

            <TextBlock Text="Пункт прибытия:" FontWeight="Bold" />
            <TextBlock Text="{Binding Destination}" Margin="0,0,0,10" />

            <TextBlock Text="Время вылета:" FontWeight="Bold" />
            <TextBlock Text="{Binding DepartureTime}" Margin="0,0,0,10" />

            <TextBlock Text="Время в пути:" FontWeight="Bold" />
            <TextBlock Text="{Binding Duration}" Margin="0,0,0,10" />
        </StackPanel>
    </Grid>
</Window>
